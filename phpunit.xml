<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="vendor/autoload.php"
		colors="true"
		verbose="true"
		stopOnFailure="false">

	<testsuites>
		<testsuite name="Test suite">
			<directory suffix=".php">./tests</directory>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
	    		<directory suffix=".php">./core</directory>
			<directory suffix=".php">./src</directory>
		</whitelist>
	</filter>

</phpunit>
